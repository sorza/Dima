@inherits OrderActionComponent

@switch (Order.Status)
{
    case EOrderStatus.Paid:
        <MudButton
                FullWidth="true"
                Color="Color.Warning"
                Variant="Variant.Outlined"
                OnClick="OnRefundButtonClicked">
            SOLICITAR ESTORNO
        </MudButton>
        break;

    case EOrderStatus.WaitingPayment:
        <MudButton FullWidth="true"
                Color="Color.Success"
                Size="Size.Large"
                Class="mb-4"
                Variant="Variant.Filled"
                OnClick="OnPayButtonClickedAsycnc">
            PAGAR COM STRIPE
        </MudButton>
        <MudButton FullWidth="true"
                   Color="Color.Error"
                   Size="Size.Large"
                   Class="mb-4"
                   Variant="Variant.Outlined"
                   OnClick="OnCancelButtonClicked">
            CANCELAR O PEDIDO
        </MudButton>
        break;

    default:
        <MudText></MudText>
        break;
}