@page "/login"
@layout HeadlessLayout
@inherits LoginPage

<PageTitle>Dima - Entrar</PageTitle>

<MudGrid Justify="Justify.Center">
    <MudItem xs="12" sm="12" md="8" lg="6" xxl="6">
        <MudPaper Class="mud-width-full pa-3" >
            <div class="d-flex justify-center py-8">
                <img src="imgs/dima.png"
                     alt="Dima - Controle Financeiro"
                     width="200" />
            </div>

            <EditForm Model="@InputModel" OnValidSubmit="OnValidSubmitAsync">
                <DataAnnotationsValidator />

                <MudTextField T="string"
                              Label="E-mail"
                              HelperText="Campo Obrigatório."
                              InputType="InputType.Email"
                              For="@(()=> InputModel.Email)"
                              @bind-Value="InputModel.Email" />

                <MudTextField T="string"
                              Label="Senha"
                              HelperText="Campo Obrigatório."
                              InputType="InputType.Password"
                              For="@(()=> InputModel.Password)"
                              @bind-Value="InputModel.Password" />

                <div class="d-flex mt-8">
                    @if (IsBusy)
                    {
                        <MudProgressCircular Color="Color.Info" Indeterminate="true"></MudProgressCircular>
                    }
                    else
                    {
                        <MudButton ButtonType="ButtonType.Submit"
                                   Variant="Variant.Filled"
                                   Color="Color.Primary">ENTRAR</MudButton>

                        <MudSpacer />

                        <MudButton Href="/comecar">QUERO ME CADASTRAR</MudButton>
                    }
                </div>
            </EditForm>

        </MudPaper>
    </MudItem>
</MudGrid>