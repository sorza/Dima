@page "/comecar"
@layout HeadlessLayout

<PageTitle>Dima - Entrar</PageTitle>

<MudGrid Justify="Justify.Center">
    <MudItem xs="12" sm="12" md="8" lg="6" xxl="6">
        <MudPaper Class="mud-width-full pa-3">
            <div class="d-flex justify-center py-8">
                <img src="imgs/dima.png"
                     alt="Dima - Controle Financeiro"
                     width="200" />
            </div>

            <MudForm @ref="_mudForm">
                <MudTextField T="string"
                              Label="E-mail"
                              InputType="InputType.Email"
                              Required="true"
                              RequiredError="Informe o E-mail"
                              Validation="@(new EmailAddressAttribute{ErrorMessage="E-mail inválido."})" />

                <MudTextField T="string"
                              Label="Senha"
                              InputType="InputType.Password"
                              Placeholder="Senha"
                              Required="true"
                              RequiredError="Senha inválida" />
            </MudForm>

            <div class="d-flex mt-8">
                <MudButton Variant="Variant.Filled"
                           Color="Color.Primary">COMEÇAR</MudButton>

                <MudSpacer />

                <MudButton Href="/login">JÁ TENHO UMA CONTA</MudButton>
            </div>

        </MudPaper>
    </MudItem>
</MudGrid>

@code {
    MudForm? _mudForm;
}

